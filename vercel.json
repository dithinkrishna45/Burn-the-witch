{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/socket.io/(.*)",
            "dest": "server/server.js"
        },
        {
            "src": "/(.*\\.css)",
            "dest": "client/$1"
        },
        {
            "src": "/(.*\\.js)",
            "dest": "client/$1"
        },
        {
            "src": "/(.*\\.html)",
            "dest": "client/$1"
        },
        {
            "src": "/",
            "dest": "client/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "server/server.js"
        }
    ]
}